<Window x:Class="MacroKey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroKey"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="MainWindow" Height="350" Width="525" Background="Transparent">
    <Grid AllowDrop="True" Background="Transparent" MouseDown="Grid_MouseDown" Opacity="0.7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="1" Margin="2" CornerRadius="10" Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF37D637"/>
                    <GradientStop Color="#FF32C932" Offset="1"/>
                    <GradientStop Color="#FFC1CF34" Offset="0.5"/>
                    <GradientStop Color="#FF7BBF36" Offset="0.75"/>
                    <GradientStop Color="#FF7BBF36" Offset="0.25"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="textBlock" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Sequence" FontWeight="Bold" TextDecorations="{x:Null}" FontSize="16"/>
                <ListBox x:Name="listSequenceKey" Grid.Row="2" Margin="5" ItemsSource="{Binding}" BorderBrush="{x:Null}" Background="#FF8BD334">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding KeyValue}" />
                                <TextBlock Text="{Binding KeyMessage}" Margin="5,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <EventSetter Event="GotFocus" Handler="ListElement_GotFocus"/>
                            <EventSetter Event="LostFocus" Handler="ListElement_LostFocus"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                <Button x:Name="recordSequenceButton" Content="Record" Margin="5" Grid.Row="1" Click="StartRecordSequence_Click" Background="#FF8BD334"/>
            </Grid>
        </Border>
        <Border BorderThickness="1" Margin="2" CornerRadius="10" Grid.Column="2">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF37D637"/>
                    <GradientStop Color="#FF32C932" Offset="1"/>
                    <GradientStop Color="#FFC1CF34" Offset="0.5"/>
                    <GradientStop Color="#FF7BBF36" Offset="0.75"/>
                    <GradientStop Color="#FF7BBF36" Offset="0.25"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="textBlock1" Grid.Row="0" Text="Macros" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                <ListBox x:Name="listMacro" Grid.Row="2" Margin="5" BorderBrush="{x:Null}" Background="#FF8BD334" ItemsSource="{Binding}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding KeyValue}"/>
                                <TextBlock Text="{Binding KeyMessage}" Margin="5,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button x:Name="recordMacroButton" Content="Record" Margin="5" Grid.Row="1" Background="#FF8BD334" Click="StartRecordMacros_Click"/>
            </Grid>
        </Border>
        <Border BorderThickness="1" Margin="2" CornerRadius="10" Grid.Column="1">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF37D637"/>
                    <GradientStop Color="#FF32C932" Offset="1"/>
                    <GradientStop Color="#FFC1CF34" Offset="0.5"/>
                    <GradientStop Color="#FF7BBF36" Offset="0.75"/>
                    <GradientStop Color="#FF7BBF36" Offset="0.25"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Height="330" VerticalAlignment="Bottom">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="textBlock2" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="MacroKey" FontSize="21.333" FontWeight="Bold"/>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="GUIHotkeyBox"  BorderBrush="#FF707070" Background="#FF8BD334" Grid.Row="0" Grid.Column="1" KeyDown="GUIHotkeyBox_KeyDown" GotFocus="Element_GotFocus" IsReadOnly="True"/>
                        <TextBox x:Name="macrosModeBox" BorderBrush="#FF707070" Background="#FF8BD334" Grid.Row="1" Grid.Column="1" KeyDown="macrosModeBox_KeyDown" GotFocus="Element_GotFocus" IsReadOnly="True"/>
                        <TextBlock x:Name="textBlock4" Text="Execute GUI Hotkey" Grid.Row="0" Grid.Column="0"/>
                        <TextBlock x:Name="textBlock5" Text="Macros Mode Hotkey" Grid.Row="1" Grid.Column="0"/>
                    </Grid>
                    <Button x:Name="button2" Content="Create Macros" Grid.Row="1" Background="#FF8BD334" Margin="10" Click="CreateMacros_Click" GotFocus="Element_GotFocus"/>
                    <Grid Grid.Row="2" Grid.RowSpan="3" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="8*"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="textBlock3" Text="Macros List" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0"/>
                        <ListBox x:Name="listMacros" Background="#FF8BD334" Grid.Row="1" ItemsSource="{Binding}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
