<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MacroKey">
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="/Skins/Icons.xaml"/>
  </ResourceDictionary.MergedDictionaries>
  
  <Style x:Key="ButtonIconCleanStyle" TargetType="Button">
    <Setter Property="Focusable" Value="False"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Border CornerRadius="10" BorderBrush="Black" BorderThickness="1">
            <Border.Background>
              <SolidColorBrush Color="White" Opacity="0"/>
            </Border.Background>
            <ContentPresenter Content="{StaticResource IconClean}" Height="15" Width="15"/>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>